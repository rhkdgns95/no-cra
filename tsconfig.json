{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "esModuleInterop": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "rootDir": "src",
  },
  "parcelTsPluginOptions": {
    "transpileOnly": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
      "src/**/*"
  ]
}